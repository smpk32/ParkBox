<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.sm">

	<select id="listUser" resultType="MemVo">
	<![CDATA[
	select * from MEMBER;
	]]>
	</select>
	
	<select id="memCheck" parameterType="String" resultType="String">
	<![CDATA[
	select * from MEMBER where email = #{email};
	]]>
	</select>
	
	<insert id="addUser" parameterType="MemVo" >
	<![CDATA[
	INSERT INTO MEMBER(EMAIL,PW,NAME,PHONE,BIRTH,POINT,SIGNDATE,LASTLOG,STATUS)
	VALUES(
	#{email},
	#{pw},
	#{name},
	#{phone},
	#{birth},
	#{point},
	#{signdate},
	#{lastLog},
	#{status}
	)
	]]>
	</insert>
	
	<delete id="memDel" parameterType="String">
	<![CDATA[
	Delete from MEMBER where EMAIL = #{email};
	]]>
	</delete>
	
	
</mapper>